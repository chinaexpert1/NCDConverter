<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <appSettings>
        <!-- Default NinjaTrader 8 data path -->
        <add key="DefaultDataPath" value="%USERPROFILE%\Documents\NinjaTrader 8\db"/>
        
        <!-- Default output path -->
        <add key="DefaultOutputPath" value="%USERPROFILE%\Documents\NCDConverter_Output"/>
        
        <!-- UI Settings -->
        <add key="WindowWidth" value="900"/>
        <add key="WindowHeight" value="650"/>
        
        <!-- Conversion Settings -->
        <add key="ShowRecordCount" value="true"/>
        <add key="EnableLogging" value="true"/>
        
        <!-- Performance -->
        <add key="BufferSize" value="8192"/>
        <add key="MaxConcurrentConversions" value="1"/>
    </appSettings>
    
    <startup>
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v6.0"/>
    </startup>
</configuration>
